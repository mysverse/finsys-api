{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2021",
    "lib": ["ES2021"],
    "strict": true,
    "outDir": "./dist",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/*.tsx", "src/**/*.tsx"]
}
